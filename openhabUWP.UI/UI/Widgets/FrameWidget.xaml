<UserControl
    x:Class="openhabUWP.UI.Widgets.FrameWidget"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:widgets="using:openhabUWP.Widgets"
    xmlns:helper="using:openhabUWP.Helper"
    mc:Ignorable="d"
    d:DesignHeight="400"
    d:DesignWidth="400"
    d:DataContext="{d:DesignInstance widgets:FrameWidget, IsDesignTimeCreatable=True}">

    <Border Background="{StaticResource  WhiteBrush}" Margin="0,-1">
        <StackPanel MinHeight="50">
            <Border 
                Visibility="{Binding Label, Converter={StaticResource StringToVisibilityConverter}}"
                Background="{StaticResource OrangeBrush}">
                <TextBlock 
                    Margin="10,5,5,5"
                    Foreground="{StaticResource WhiteBrush}"
                    Style="{StaticResource SubtitleTextBlockStyle}"
                    Text="{Binding Label}" 
                    FontWeight="Bold"/>
            </Border>
            <ItemsControl 
                Margin="0,0,0,0"
                ItemsSource="{Binding Widgets}"
                ItemTemplateSelector="{StaticResource WidgetTemplateSelector}"/>
        </StackPanel>
    </Border>
</UserControl>
