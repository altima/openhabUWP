<UserControl
    x:Class="openhabUWP.UI.Widgets.FrameWidget"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:widgets="using:openhabUWP.Widgets"
    xmlns:helper="using:openhabUWP.Helper"
    mc:Ignorable="d"
    d:DesignHeight="400"
    d:DesignWidth="400"
    d:DataContext="{d:DesignInstance widgets:FrameWidget, IsDesignTimeCreatable=True}">

    <StackPanel Padding="10">
        <TextBlock 
            Text="{Binding Label}" 
            FontWeight="Bold"/>
        <ItemsControl 
            ItemsSource="{Binding Widgets}"
            ItemTemplateSelector="{StaticResource WidgetTemplateSelector}">
        </ItemsControl>
    </StackPanel>
</UserControl>
