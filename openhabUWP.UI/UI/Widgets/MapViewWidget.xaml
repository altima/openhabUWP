<UserControl
    x:Class="openhabUWP.UI.Widgets.MapViewWidget"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:openhabUWP.UI.Widgets"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:widgets="using:openhabUWP.Widgets"
    xmlns:converters="using:openhabUWP.Converters"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400"
    d:DataContext="{d:DesignInstance widgets:MapViewWidget, IsDesignTimeCreatable=True}">

    <UserControl.Resources>
        <converters:MapViewWidgetToUrlConverter x:Key="MapViewWidgetToUrlConverter"/>
    </UserControl.Resources>

    <Grid>
        <Image 
            Source="{Binding Converter={StaticResource MapViewWidgetToUrlConverter}}"
            Stretch="Uniform"/>
    </Grid>
</UserControl>
