<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:widgets="using:openhabUWP.UI.Widgets"
    xmlns:helper="using:openhabUWP.Helper">

    <!-- templates -->
    <DataTemplate x:Key="FrameWidgetTemplate">
        <widgets:FrameWidget IsHitTestVisible="{Binding Converter={StaticResource WidgetClickableConverter}}"/>
    </DataTemplate>

    <DataTemplate x:Key="SwitchWidgetTemplate">
        <widgets:SwitchWidget IsHitTestVisible="{Binding Converter={StaticResource WidgetClickableConverter}}"/>
    </DataTemplate>

    <DataTemplate x:Key="TextWidgetTemplate">
        <widgets:TextWidget IsHitTestVisible="{Binding Converter={StaticResource WidgetClickableConverter}}"/>
    </DataTemplate>

    <DataTemplate x:Key="GroupWidgetTemplate">
        <widgets:GroupWidget IsHitTestVisible="{Binding Converter={StaticResource WidgetClickableConverter}}"/>
    </DataTemplate>

    
    <!-- selector -->
    <helper:WidgetTemplateSelector
        x:Key="WidgetTemplateSelector"
        FrameWidgeTemplate="{StaticResource FrameWidgetTemplate}"
        SwitchWidgeTemplate="{StaticResource SwitchWidgetTemplate}"
        TextWidgeTemplate="{StaticResource TextWidgetTemplate}"
        GroupWidgeTemplate="{StaticResource GroupWidgetTemplate}"/>
    
</ResourceDictionary>
