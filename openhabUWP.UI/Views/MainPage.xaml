<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mvvm="using:Prism.Windows.Mvvm"
    xmlns:converters="using:openhabUWP.Converters"
    xmlns:design="using:openhabUWP.ViewModels.Design"
    xmlns:widgets="using:openhabUWP.UI.Widgets"
    xmlns:helper="using:openhabUWP.Helper"
    x:Class="openhabUWP.Views.MainPage"
    mvvm:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance design:MainPageViewModel, IsDesignTimeCreatable=True}">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="48"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="{Binding CurrentPage.Title}" Margin="5"
                   VerticalAlignment="Center"/>


        <ScrollViewer Grid.Row="1">
            <ItemsControl
                ItemsSource="{Binding CurrentPage.Widgets}"
                ItemTemplateSelector="{StaticResource WidgetTemplateSelector}">
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>
