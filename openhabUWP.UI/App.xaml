<prism:PrismUnityApplication
    x:Class="openhabUWP.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:prism="using:Prism.Unity.Windows"
    RequestedTheme="Light">

    <prism:PrismUnityApplication.Resources>
        <ResourceDictionary>
            <!--General styles-->
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/SplitViewStyles.xaml" />
                <ResourceDictionary Source="Styles/Common.xaml" />
                <ResourceDictionary Source="Styles/Styles.xaml" />
                <ResourceDictionary Source="Styles/DataTemplates.xaml" />
                
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </prism:PrismUnityApplication.Resources>

</prism:PrismUnityApplication>
